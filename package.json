{
	"name": "invoice-tracker",
	"version": "0.1.0",
	"homepage": "./",
	"main": "public/electron.js",
	"private": true,
	"dependencies": {
		"electron-is-dev": "^0.3.0",
		"electron-publisher-s3": "^20.17.2",
		"glamor": "^2.20.40",
		"glamorous": "^5.0.0",
		"prop-types": "^15.6.2",
		"react": "^16.7.0",
		"react-dev-utils": "^5.0.1",
		"react-dom": "^16.7.0"
	},
	"scripts": {
		"dev": "yarn react-scripts start",
		"lint": "tslint 'src/**/*.{ts,tsx}'",
		"build": "react-scripts build",
		"start": "concurrently \"cross-env BROWSER=none yarn react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
		"pack": "electron-builder --dir",
		"dist": "npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"devDependencies": {
		"@types/jest": "23.3.13",
		"@types/node": "10.12.19",
		"@types/react": "16.7.22",
		"@types/react-dom": "16.0.11",
		"concurrently": "^3.6.0",
		"cross-env": "^5.2.0",
		"electron": "^4.0.2",
		"electron-builder": "^20.18.0",
		"prettier": "^1.16.1",
		"react-scripts": "2.1.3",
		"tslint": "^5.12.1",
		"tslint-config-prettier": "^1.17.0",
		"tslint-config-standard": "^8.0.1",
		"tslint-react": "^3.6.0",
		"typescript": "3.2.4",
		"version-bump-prompt": "^4.1.0"
	},
	"build": {
		"appId": "fi.patrikmarin",
		"compression": "normal",
		"productName": "Invoice Tracker",
		"directories": {
			"buildResources": "build",
			"output": "dist"
		},
		"mac": {
			"icon": "assets/icon.icns",
			"type": "distribution",
			"target": [
				"pkg",
				"dmg",
				"mas"
			],
			"publish": {
				"provider": "s3",
				"bucket": "invoice-tracker-releases",
				"path": "releases"
			},
			"category": "public.app-category.news"
		},
		"mas": {
			"entitlements": "assets/entitlements.mas.plist",
			"entitlementsInherit": "assets/entitlements.mas.inherit.plist",
			"provisioningProfile": "assets/embedded.provisionprofile"
		},
		"win": {
			"target": "nsis",
			"icon": "assets/icon.ico",
			"publish": {
				"provider": "s3",
				"bucket": "invoice-tracker-releases",
				"path": "releases"
			}
		},
		"linux": {
			"icon": "assets/icon.png",
			"target": [
				"snap",
				"AppImage"
			],
			"description": "Invoice Tracker",
			"category": "Network;Feed",
			"publish": {
				"provider": "s3",
				"bucket": "invoice-tracker-releases",
				"path": "releases"
			}
		}
	}
}
