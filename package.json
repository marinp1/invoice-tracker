{
	"name": "payminder",
	"version": "0.1.0",
	"author": "Patrik Marin",
	"description": "Electron application to help people to track bills",
	"homepage": "./",
	"main": "public/electron.js",
	"private": true,
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^1.2.14",
		"@fortawesome/free-brands-svg-icons": "^5.7.1",
		"@fortawesome/free-solid-svg-icons": "^5.7.1",
		"@fortawesome/react-fontawesome": "^0.1.4",
		"@types/lodash": "^4.14.120",
		"@types/react-datepicker": "^2.0.2",
		"aws-amplify": "^1.1.19",
		"aws-amplify-react": "^2.3.0",
		"dropbox": "^4.0.15",
		"electron-is-dev": "^0.3.0",
		"electron-json-config": "^1.5.3",
		"electron-publisher-s3": "^20.17.2",
		"glamor": "^2.20.40",
		"glamorous": "^5.0.0",
		"iban": "^0.0.11",
		"lodash": "^4.17.11",
		"moment": "^2.24.0",
		"prop-types": "^15.6.2",
		"react": "^16.7.0",
		"react-currency-input": "^1.3.6",
		"react-datepicker": "^2.1.0",
		"react-dev-utils": "^5.0.1",
		"react-dom": "^16.7.0",
		"react-fontawesome": "^1.6.1",
		"react-loading": "^2.0.3",
		"react-pose": "^4.0.6",
		"react-redux": "^6.0.0",
		"react-select": "^2.3.0",
		"react-toastify": "^4.5.2",
		"react-toggle": "^4.0.2",
		"react-toggle-button": "^2.2.0",
		"redux": "^4.0.1",
		"redux-form": "^8.1.0",
		"redux-plainify": "^0.3.1",
		"redux-thunk": "^2.3.0",
		"uuid": "^3.3.2"
	},
	"scripts": {
		"dev": "yarn react-scripts start",
		"lint": "tslint 'src/**/*.{ts,tsx}'",
		"build-web": "react-scripts build",
		"start": "concurrently \"cross-env BROWSER=none yarn react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
		"pack": "electron-builder --dir",
		"dist": "npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"devDependencies": {
		"@types/iban": "^0.0.30",
		"@types/jest": "23.3.13",
		"@types/node": "10.12.19",
		"@types/react": "16.7.22",
		"@types/react-dom": "16.0.11",
		"@types/react-redux": "^7.0.1",
		"@types/react-select": "^2.0.11",
		"@types/react-toggle": "^4.0.2",
		"@types/redux-form": "^7.4.16",
		"@types/uuid": "^3.4.4",
		"concurrently": "^3.6.0",
		"cross-env": "^5.2.0",
		"electron": "^4.0.2",
		"electron-builder": "^20.18.0",
		"electron-devtools-installer": "^2.2.4",
		"prettier": "^1.16.1",
		"react-scripts": "2.1.3",
		"tslint": "^5.12.1",
		"tslint-config-prettier": "^1.17.0",
		"tslint-config-standard": "^8.0.1",
		"tslint-react": "^3.6.0",
		"typescript": "3.2.4",
		"version-bump-prompt": "^4.1.0",
		"wait-on": "^3.2.0"
	},
	"build": {
		"appId": "fi.patrikmarin.payminder",
		"compression": "normal",
		"productName": "Payminder",
		"directories": {
			"buildResources": "build",
			"output": "dist"
		},
		"mac": {
			"icon": "assets/icon.icns",
			"type": "distribution",
			"target": [
				"pkg",
				"dmg",
				"mas"
			],
			"publish": {
				"provider": "s3",
				"bucket": "invoice-tracker-releases",
				"path": "releases"
			},
			"category": "public.app-category.productivity"
		},
		"mas": {
			"entitlements": "assets/entitlements.mas.plist",
			"entitlementsInherit": "assets/entitlements.mas.inherit.plist",
			"provisioningProfile": "assets/embedded.provisionprofile"
		},
		"win": {
			"target": "nsis",
			"icon": "assets/icon.ico",
			"publish": {
				"provider": "s3",
				"bucket": "invoice-tracker-releases",
				"path": "releases"
			}
		},
		"linux": {
			"icon": "assets/icon.png",
			"target": [
				"snap",
				"AppImage"
			],
			"description": "Payminder",
			"category": "Network;Feed",
			"publish": {
				"provider": "s3",
				"bucket": "invoice-tracker-releases",
				"path": "releases"
			}
		}
	}
}